<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title PRINTERSTAT</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width"/>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/DialogCSS")
    @Scripts.Render("~/bundles/modernizr")



















    <meta name="description" content="The description of my page" />
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Сбор данных о печати v.2.0", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Задания", "Index", "Home")</li>
                        <li>@Html.ActionLink("Устройства печати", "Index", "Device")</li>
                        <li>@Html.ActionLink("Справочники", "Index", "Dictionary")</li>
                        <li>@Html.ActionLink("Настройки", "Index", "Profile")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
<footer>
   
    <div class="content-wrapper">
        <div class="float-left">
            <p>&copy; @DateTime.Now.Year</p>
        </div>
    </div>
</footer>


    @RenderSection("scripts", required: false)



    <link href="~/Content/themes/base/dialog.css" rel="stylesheet" />

<link href="~/Content/themes/jquery.datetimepicker.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>
    <script src="~/Scripts/openDialog.js"></script>
</body>
</html>
